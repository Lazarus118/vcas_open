@model IEnumerable<VCAS.Models.VCAS_issuedChecks>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>Print Report</title>
    <!-- Metro 4 -->
    <link rel="stylesheet" href="https://cdn.metroui.org.ua/v4/css/metro-all.min.css">
    <script src="https://cdn.metroui.org.ua/v4/js/metro.min.js"></script>
    <style>
        .rec_body {
            padding: 50px;
        }

            .rec_body h2, h4, span {
                float: right;
                clear: both;
            }

            .rec_body h1 {
                font-weight: 700;
            }
    </style>
</head>
<body>
    <button type="submit" class="image-button m-1 primary" id="printBtn" style="text-decoration: none !important; width: 100%;">
        <span class="mif-print icon"></span>
        <span class="caption">Print</span>
    </button>


    <div class="rec_body">
        <div class="row">
            <div class="cell-lg-3">
                <img src="@Url.Content(ViewBag.recLogo)" width="100" />
            </div>
            <div class="cell-lg-9">
                <h2 align="LEFT">Organization - <strong>@ViewBag.council</strong></h2>
                <h4>Expense Report (@ViewBag.status)</h4>
                <p align="LEFT"><span>for period:: @ViewBag.startDate - to - @ViewBag.endDate</span></p>
            </div>
        </div>
    </div>


    <br />
    <br />
    <hr style="clear:both;" />
    <br />
    <br />
    <table class="table table-border cell-border compact">
        <thead>
            <tr>
                <th>
                    Amount
                </th>
                <th>
                    Cheque #
                </th>
                <th>
                    Recipient
                </th>
                <th>
                    Receiver ID
                </th>
                <th>
                    ID type
                </th>
                <th>
                    Expense
                </th>
                <th>
                    Account
                </th>
                <th>
                    Signature
                </th>
            </tr>
        </thead>


        @foreach (var item in Model)
        {
            <tbody>
                <tr>
                    <td>
                        EC$ @Html.DisplayFor(modelItem => item.amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.checkNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.receiverName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.receiverID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VCAS_REF_receiverID_Types.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VCAS_expenses.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VCAS_debitAccounts.name)
                    </td>
                    <td>
                        @if (item.complete == true)
                        {
                            if (item.attach_ID != null)
                            {
                                <span class="mif-attachment icon"> ID Attachment</span>
                            }
                            if (item.attach_Doc != null)
                            {
                                <br />
                                <span class="mif-attachment icon"> Document Attachment</span>
                            }
                            if (item.signature != null)
                            {
                                <img src="@Html.DisplayFor(modelItem => item.signature)" width="100%" style="max-width: 100px;" />
                            }
                        }
                    </td>
                </tr>
            </tbody>
        }

    </table>

    <footer>
        <p>&copy; @DateTime.Now.Year</p>
        <p>Generated by: @VCAS.Controllers.HomeController.gloabl_appName()</p>
    </footer>

    <script type="text/javascript">
        $(document).ready(function () {
            var printBtn = $("#printBtn");
            printBtn.click(function () {
                printBtn.hide();
                window.print();
                return false;
            });
        });
    </script>
</body>
</html>